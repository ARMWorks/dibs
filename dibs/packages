config_packages="$(kconfig-tweak --file "$DIBS_WORKSPACE/config/config" -s CONFIG_PACKAGE_USERDEFINED)"

all_packages=(
	apt
	bluez
	crda
	dnsutils
	dosfstools
	dropbear
	ifupdown
	iputils-ping
	isc-dhcp-client
	kmod
	less
	libbluetooth3
	locales
	net-tools
	parted
	vim-tiny
	wireless-tools
	wpasupplicant
)

for package in "${all_packages[@]}"; do
	package_var=CONFIG_PACKAGE_$(echo ${package} | tr '[a-z-]' '[A-Z_]')
	if [[ "y" == "$(kconfig-tweak --file "$DIBS_WORKSPACE/config/config" -s $package_var)" ]] ; then
		config_packages="$config_packages $package"
	fi
done

